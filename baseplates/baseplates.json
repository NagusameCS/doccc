  "animations": {
    "fadeIn": { "name": "Fade In", "keyframes": "from { opacity: 0; } to { opacity: 1; }" },
    "fadeSlide": { "name": "Fade Slide", "keyframes": "from { opacity: 0; transform: translateX(-8px); } to { opacity: 1; transform: translateX(0); }" },
    "scaleIn": { "name": "Scale In", "keyframes": "from { opacity: 0; transform: scale(0.9); } to { opacity: 1; transform: scale(1); }" },
    "drawLine": { "name": "Draw Line", "keyframes": "from { stroke-dashoffset: 500; } to { stroke-dashoffset: 0; }" },
    "pulse": { "name": "Pulse", "keyframes": "0%, 100% { opacity: 1; } 50% { opacity: 0.6; }" },
    "blink": { "name": "Blink", "keyframes": "0%, 100% { opacity: 1; } 50% { opacity: 0; }" },
    "gradientShift": { "name": "Gradient Shift", "keyframes": "0% { stop-color: var(--start); } 50% { stop-color: var(--end); } 100% { stop-color: var(--start); }" },
    "flowRight": { "name": "Flow Right", "keyframes": "from { transform: translateX(-100%); } to { transform: translateX(100%); }" },
    "shimmer": { "name": "Shimmer", "keyframes": "0% { opacity: 0.5; } 50% { opacity: 1; } 100% { opacity: 0.5; }" },
    "countUp": { "name": "Count Up", "keyframes": "from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); }" },
    "growBar": { "name": "Grow Bar", "keyframes": "from { transform: scaleX(0); } to { transform: scaleX(1); }" },
    "drawSegment": { "name": "Draw Segment", "keyframes": "from { stroke-dashoffset: 100; } to { stroke-dashoffset: 0; }" },
    "float": { "name": "Float", "keyframes": "0%, 100% { transform: translateY(0); } 50% { transform: translateY(-5px); }" },
    "highlight": { "name": "Highlight", "keyframes": "0%, 100% { background: transparent; } 50% { background: rgba(255, 255, 255, 0.05); }" }
  }
